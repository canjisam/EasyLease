<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cwnu.lease.web.admin.mapper.SystemUserMapper">
    <!-- 根据条件查询系统用户信息，包括用户的基本信息和岗位名称 -->
    <select id="pageSystemUser" resultType="com.cwnu.lease.web.admin.vo.system.user.SystemUserItemVo">
        <!-- 查询用户表中的基本信息，并通过左连接获取岗位表中的岗位名称 -->
        select su.id,
        username,
        su.name,
        type,
        phone,
        avatar_url,
        additional_info,
        post_id,
        su.status,
        sp.name post_name
        from system_user su
        left join system_post sp on su.post_id = sp.id and sp.is_deleted = 0
        <!-- （方言） 筛选删除状态为0的用户，可选地根据名称或电话进行模糊查询 -->
        <where>
            su.is_deleted = 0
            <if test="queryVo.name != null and queryVo.name != ''">
                <!-- 如果提供了用户名，则进行模糊匹配 -->
                and su.name like concat('%',#{queryVo.name},'%')
            </if>
            <if test="queryVo.phone !=null and queryVo.phone != ''">
                <!-- 如果提供了电话号码，则进行模糊匹配 -->
                and su.phone like concat('%',#{queryVo.phone},'%')
            </if>
        </where>
    </select>
    <select id="selectOneByUsername" resultType="com.cwnu.lease.model.entity.SystemUser">
        select id,
               username,
               password,
               name,
               type,
               phone,
               avatar_url,
               additional_info,
               post_id,
               status
        from system_user
        where username = #{username}
          and is_deleted = 0
    </select>

</mapper>
